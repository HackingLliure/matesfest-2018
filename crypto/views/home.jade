extends layout

block content
  .container-fluid
    if messages.error
      .alert.alert-danger(role='alert')
        for error in messages.error
          div= error.msg
    if messages.success
      .alert.alert-success(role='alert')
        for success in messages.success
          div= success.msg
    if messages.info
      .alert.alert-info(role='alert')
        for info in messages.info
          div= info.msg

    .row.text-center
      h3 Your id is #{id} (secret: #{secret})
      
    .row.text-center
      .col-sm-2
      .col-sm-4
        .panel
          .panel-body
            h3
              a.btn.btn-default(href='/blockchain', role='button') Show Blockchain
      .col-sm-4
        .panel
          .panel-body
            h3
              a.btn.btn-default(href='/account', role='button') See account
    .row.text-center 
      .col-sm-2 
      .col-sm-4
        .panel
          .panel-body
            h3
              a.btn.btn-default(href='/transaction', role='button') Make transaction
      .col-sm-4
        .panel
          .panel-body
            h3
              a.btn.btn-default(href='/mining', role='button') Mining
