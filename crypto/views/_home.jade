extends layout

block content
  .container-fluid
    if messages.error
      .alert.alert-danger(role='alert')
        for error in messages.error
          div= error.msg
    if messages.success
      .alert.alert-success(role='alert')
        for success in messages.success
          div= success.msg
    if messages.info
      .alert.alert-info(role='alert')
        for info in messages.info
          div= info.msg

    block welcome
      .text-center
        h4 Welcome to the crypto simulator. Your ID is 
        h2 #{id}
        h4 and your secret code is
        h2 #{secret}
    block link
      .text-center
        a.btn.btn-default(href='/', role='button') Go to control panel
          
