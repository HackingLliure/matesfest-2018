extends layout

block content
  .container-fluid
    if messages.error
      .alert.alert-danger(role='alert')
        for error in messages.error
          div= error.msg
    if messages.success
      .alert.alert-success(role='alert')
        for success in messages.success
          div= success.msg
    if messages.info
      .alert.alert-info(role='alert')
        for info in messages.info
          div= info.msg

    .text-center
      h2 Welcome to the crypto simulator.
      .col
        .row-sm-4
          h4 Your ID is 
        .row-sm-4
          h3 #{id[0]}
      
      a.btn.btn-default(href='/', role='button') Go to control panel
          
